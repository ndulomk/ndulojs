{
  "name": "@ndulojs/cli",
  "version": "0.1.0",
  "description": "CLI for NduloJS â€” scaffold modules, submodules, and full projects",
  "type": "module",
  "main": "./dist/bin.js",
  "bin": {
    "ndulo": "./dist/bin.js"
  },
  "exports": {
    ".": {
      "import": "./dist/bin.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.json && node scripts/fix-shebang.mjs",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist"
  },
  "keywords": ["cli", "ndulojs", "scaffold", "clean-architecture"],
  "author": "NduloJS",
  "license": "MIT",
  "dependencies": {
    "@ndulojs/core": "^0.1.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  }
}
