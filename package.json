{
  "name": "ndulojs-monorepo",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "bun run --filter 'ndulojs' build && bun run --filter 'ndulojs-cli' build",
    "typecheck": "bun run --filter '*' typecheck",
    "lint": "eslint 'packages/*/src/**/*.ts' 'packages/*/test/**/*.ts'",
    "lint:fix": "eslint 'packages/*/src/**/*.ts' 'packages/*/test/**/*.ts' --fix",
    "format": "prettier --write 'packages/*/src/**/*.ts' 'packages/*/test/**/*.ts'",
    "format:check": "prettier --check 'packages/*/src/**/*.ts' 'packages/*/test/**/*.ts'",
    "test": "bun run --filter '*' test:run",
    "clean": "bun run --filter '*' clean"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.5.0"
  }
}